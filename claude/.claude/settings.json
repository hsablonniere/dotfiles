{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Fetch",
      "WebFetch",
      "WebSearch",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(find:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(sed:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git filter-branch:*)",
      "Bash(git log:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr view:*)",
      "Bash(gh search:*)",
      "Bash(glab issue list:*)",
      "Bash(glab issue view:*)",
      "Bash(glab mr list:*)",
      "Bash(glab mr view:*)",
      "Bash(npm info:*)",
      "Bash(npm install:*)",
      "Bash(npm run build:*)",
      "Bash(npm search:*)"
    ],
    "deny": [
      "Read(.env*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.js",
    "padding": 0
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": false
}
