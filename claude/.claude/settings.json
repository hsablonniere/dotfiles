{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Fetch",
      "WebFetch",
      "WebSearch",
      "Bash(curl:*)",
      "Bash(find:*)",
      "Bash(jq:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(npm run build:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(node:*)",
      "Bash(cat:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(find:*)",
      "Bash(glab mr list:*)",
      "Bash(glab mr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr diff:*)"
    ],
    "deny": [
      "Read(.env*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.js",
    "padding": 0
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": false,
  "model": "haiku"
}
